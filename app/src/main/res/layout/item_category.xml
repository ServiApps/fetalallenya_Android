<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/categoryCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card:cardElevation="2dp"
        card:cardUseCompatPadding="true">


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/category_item_CategoryImage"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/category_item_CategoryName"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/category_item_CategoryImage"
                android:layout_toEndOf="@+id/category_item_CategoryImage"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/category_item_ProductCount"
                android:textSize="14dp"
                android:layout_alignBottom="@+id/category_item_CategoryImage"
                android:layout_alignLeft="@+id/category_item_CategoryName"
                android:layout_alignStart="@+id/category_item_CategoryName"
                android:layout_marginBottom="6dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>